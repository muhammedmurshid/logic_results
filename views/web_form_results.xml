<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="logic_exams_result_template">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_website_form" data-vcss="001" data-snippet="s_website_form">
                    <div class="container">
                        <form action="/exam_results/submit/" method="post" enctype="multipart/form-data"
                              class="o_mark_required" data-mark="*" data-model_name="" data-success-page="">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <br/>
                            <div align="center">
                                <h2>Result Form</h2>
                            </div>
                            <br/>
                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                <div class="form-group col-12 s_website_form_field s_website_form_required">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">Your Name</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="student_id" t-attf-class="form-control s_website_form_input"
                                                    required="1">
                                                <t t-foreach="students or []" t-as="student">
                                                    <option t-att-value="student.id">
                                                        <t t-esc="student.name"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_required">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">Updated Photo</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <input type="file" name="student_photo" class="file" multiple="true"
                                                   data-show-upload="true" data-show-caption="true" lass="file"
                                                   data-show-preview="true" accept="image/*"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_required">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">Phone Number</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <input type="tel"
                                                   class="form-control s_website_form_input" name="phone"
                                                   required=""/>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_required">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">Batch Name</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <input type="text"
                                                   class="form-control s_website_form_input" name="batch_name"
                                                   required=""
                                                   t-att-value="batch_name" readonly="1"/>
                                            <input type="text"
                                                   class="form-control s_website_form_input" name="batch_id"
                                                   required=""
                                                   t-att-value="batch_id" readonly="1" style="display:none"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_required">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">Campus Name</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <input type="text"
                                                   class="form-control s_website_form_input" name="campus_name"
                                                   required=""/>

                                        </div>
                                    </div>
                                </div>


                                <div class="form-group col-12 s_website_form_field s_website_form_required">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">Class Teacher</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <input type="text"
                                                   class="form-control s_website_form_input" name="class_teacher"
                                                   t-att-value="user" readonly="1"
                                                   required=""/>
                                            <input type="text"
                                                   class="form-control s_website_form_input" name="class_teacher_name"
                                                   required=""
                                                   t-att-value="u_id" readonly="1" style="display:none"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">Group</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="group" id="group_name"
                                                    class="form-control link-style">
                                                <option value="group_one" t-esc="'Group 1'"/>
                                                <option value="group_two" t-esc="'Group 2'"/>
                                                <option value="both" t-esc="'Both'"/>

                                            </select>
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group col-12 s_website_form_field s_website_form_required"
                                     data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">Mode of Study</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="mode_of_study" id="mode_of_study"
                                                    class="form-control link-style">
                                                <option value="offline" t-esc="'Offline'"/>
                                                <option value="online" t-esc="'Online'"/>

                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field" data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">Attempted Part</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="part" id="part"
                                                    class="form-control link-style">
                                                <option value="part1" t-esc="'Part 1'"/>
                                                <option value="part2" t-esc="'Part 2'"/>
                                                <option value="both" t-esc="'Both'"/>

                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field" data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">Qualification Status</span>
                                        </label>
                                        <div class="col-sm">
                                            <select name="qualification_status" id="qualification_status"
                                                    class="form-control link-style">
                                                <option value="semi_qualified" t-esc="'Semi Qualified'"/>
                                                <option value="fully_qualified" t-esc="'Fully Qualified'"/>
                                                <option value="both_qualified_in_single_window"
                                                        t-esc="'Both Qualified in Single Window'"/>

                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_field s_website_form_required">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label"
                                               style="width: 200px">
                                            <span class="s_website_form_label_content">Result Screenshot</span>
                                            <span class="s_website_form_mark">*</span>
                                        </label>
                                        <div class="col-sm">
                                            <input type="file" name="result_screenshot" class="file" multiple="true"
                                                   data-show-upload="true" data-show-caption="true" lass="file"
                                                   data-show-preview="true" accept="image/*"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
                                    <div style="width: 200px;" class="s_website_form_label"/>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <template id="tmp_logic_exam_results" name="Your Feedback Successfully Submitted">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure" id="oe_structure_website_form_contact_us_thanks_1"/>
                <div class="container mt-4">
                    <div class="row">
                        <div class="col-lg-7 col-xl-6 mr-lg-auto oe_structure">
                            <section class="pt40 s_text_block pb40 o_colored_level o_cc o_cc1"
                                     data-snippet="s_text_block" data-name="Text">
                                <div class="container">
                                    <span class="d-block fa fa-4x fa-thumbs-up mx-auto rounded-circle bg-primary"/>
                                    <br/>
                                    <h1 class="text-center">Thank You!</h1>
                                    <div class="pb16 pt16 s_hr" data-snippet="s_hr" data-name="Separator">
                                        <hr class="mx-auto border-top w-50 border-dark text-center"/>
                                    </div>
                                    <h5 class="text-center">
                                        <span class="fa fa-check-circle"/>
                                        <span>Exam result has been sent
                                            <b>successfully</b>
                                        </span>
                                    </h5>

                                </div>
                            </section>
                        </div>
                        <div class="col-lg-4">
                            <t t-call="website.company_description"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure" id="oe_structure_website_form_contact_us_thanks_2"/>
            </div>
        </t>
    </template>
</odoo>